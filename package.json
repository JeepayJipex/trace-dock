{
  "name": "trace-dock",
  "version": "1.0.0",
  "description": "A complete logging tool with SDK, server, and web UI",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=@trace-dock/server",
    "dev:web": "turbo run dev --filter=@trace-dock/web",
    "build": "turbo run build",
    "build:sdk": "turbo run build --filter=@trace-dock/sdk",
    "build:server": "turbo run build --filter=@trace-dock/server",
    "build:web": "turbo run build --filter=@trace-dock/web",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:sdk": "turbo run test:run --filter=@trace-dock/sdk",
    "test:server": "turbo run test:run --filter=@trace-dock/server",
    "test:web": "turbo run test:run --filter=@trace-dock/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker build -f docker/Dockerfile.unified -t trace-dock:local .",
    "docker:run": "docker run -it --rm -p 8080:80 -v trace-dock-data:/app/data trace-dock:local",
    "docker:push": "docker tag trace-dock:local jeepayjipex/trace-dock:latest && docker push jeepayjipex/trace-dock:latest"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
