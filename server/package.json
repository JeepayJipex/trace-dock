{
  "name": "@trace-dock/server",
  "version": "1.0.0",
  "description": "Trace-dock server for log ingestion and streaming",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "db:setup": "tsx src/db/setup.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/node-ws": "^1.0.0",
    "better-sqlite3": "^11.6.0",
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
